<style>
    body {
      overflow: hidden;
    }
    #version {
        position: absolute;
        left : 1em;
        bottom: 1em;
        width: 300px;
        padding: 0;
        font-size: 4em;
        font-weight: bold;
        color: silver;
    }
    
    #pokemonlogo {                
        position : absolute;
        width : 98%;
        margin : 0 auto;
        z-index : -10;
        opacity: 0.4;
    }
    
    .card {
        display : block;
        min-width: 420px;
        width : 40%;
        background-color : white;
        border : 1px solid silver;
        padding: 10px;
        margin : 0 auto;
        text-align : center;
    }
    
    .card > img {
        min-width : 400px;
    }
    
    .card h2 {
        margin : 8px;
        font-family : sans-serif;
        font-size : 4em;
        color : tomato;
    }

</style>
<img id="pokemonlogo" src="img/pokemon-logo.svg" alt="pokemon logo"/>
<div class="card">
    <img src="img/pokemon/{{pokemon.id}}.png" alt="{{pokemon.name}} ({{pokemon.id}})"/> 
    <h2>{{pokemon.name}}</h2>
    {{process.env.HOSTNAME}}
</div> 
<div id="version">1.0.0</div>

